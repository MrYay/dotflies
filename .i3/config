client.focused 					$termbg $termbg $termfg #905010
client.focused_inactive	$lgtgry $termbg $lgtgry #905010
client.unfocused 				$termbg $termbg $drkgry #905010
client.urgent						$hghlgt $termbg $hghlgt #905010
client.placeholder 			#000000 $termfg $termfg #905010

client.background 			#000000

# Wallpaper
